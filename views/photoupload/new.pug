extends ../layout

block content
	h1 New Photo
	include ../errors
	form(action='/users/upload-photo', method='post', enctype='multipart/form-data')
		.form-group
			label(for='image') Image
			input.form-control(name='image', type='file')
		.form-group
			label(for='caption') Caption
			input.form-control(name='caption', value=photo.caption)
		.form-group
			label(for='tags') Hashtags
			input.form-control.hash(name='tags', value=photo.tags)
		.form-group
			input.btn.btn-primary.btn-lg(type='submit', value='Create')
