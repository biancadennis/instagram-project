extends ../layout

block content
	if photo
		.row
			.col-xs-7
				p= photo.caption
				p: a(href=photo.imageUrl, target=_blank)
					img(src=photo.imageThumbnailUrl)
				form(action=`/users/photo/${photo.id}/comments`, method='post')
					.form-group
						label(for='author') Author
						input.form-control(name='author')
					.form-group
						label(for='body') Body
						textarea.form-control(name='body')
					.form-group
						input.btn.btn-primary.btn-lg(type='submit', value='Create')
				each comment in photo.comments
					h4.list-group-item-heading #{comment.author} #[small= date(comment)]
					p.list-group-itnme-text= comment.body
	else
		h2 Not Found
		p That photo does not exist.
